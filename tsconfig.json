{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "declaration": true,
    "strictNullChecks": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
