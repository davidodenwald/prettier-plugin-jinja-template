{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "esnext",
    "moduleResolution": "node",
    "module": "esnext",
    "lib": [
      "esnext",
    ],
    "declaration": true,
    "strictNullChecks": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["src/typing/typing", "./node_modules/@types"],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "lib",
    "node_modules",
    "test",
    "*.test.*",
  ]
}
